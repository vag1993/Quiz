<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E53935</item>
        <item name="colorPrimaryDark">#D50000</item>
        <item name="colorAccent">#E53935</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">#D50000</item>
    </style>
    <style name="HeaderText" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize my Header Text View -->
        <item name="android:text">@string/HeaderTitle</item>
        <item name="android:textColor">#E53935</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:drawable/editbox_dropdown_light_frame</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="QuestionLayouts" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize my Questions Layouts Text View -->
        <item name="android:background">@android:drawable/editbox_dropdown_light_frame</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="QuestionTitles" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize my Question Text View -->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#E53935</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RadioGroupViews" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize my Radio Group View for answers -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
    </style>
</resources>
